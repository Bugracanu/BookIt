@model BookIt.Models.Booking

@{
    ViewData["Title"] = "Randevu Oluştur";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 card p-4 shadow-sm border-0">
        <h2 class="text-center mb-4">@ViewBag.ServiceName İçin Randevu Al</h2>
        
        <form asp-action="Create" method="post">
            <input type="hidden" name="ServiceId" value="@ViewBag.ServiceId" />
            
            <div class="mb-3">
                <label class="form-label">Tarih ve Saat Seçin</label>
                <input asp-for="StartTime" type="datetime-local" class="form-control" required />
            </div>

            <div class="d-flex justify-content-between">
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">İptal</a>
                <button type="submit" class="btn btn-success">Randevuyu Onayla</button>
            </div>
        </form>
    </div>
</div>